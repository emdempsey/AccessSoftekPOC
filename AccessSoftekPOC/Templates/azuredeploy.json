          "customerVPNVendor": { "value": "[parameters('customerVPNVendor')]" },
          "virtualNetworkName": { "value": "[variables('virtualNetworkName')]" },
          "vnetAddressSpacePrefix": { "value": "[parameters('vnetAddressSpacePrefix')]" }
        }
      }
