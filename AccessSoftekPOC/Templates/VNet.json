    //    "displayName": "Customer Virtual Network Gateway"
    //  },
    //  "properties": {
    //    "gatewayType": "DynamicRouting",
    //    "gatewaySize": "Default",
    //    "bgpEnabled": false,
    //    "vpnClientAddressPool": "[parameters('customerVPNP2SSubnet')]",
    //    "defaultSite": "[concat(parameters('customerPrefix'),'-lan01')]"
    //  }
    //},
  ]
}
